<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="view.NewsDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="0.5"
        android:gravity="center_horizontal"
        android:scrollbars="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/news_imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            />


        <TextView
        android:id="@+id/newstitle_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="erfgr"
            android:textSize="20sp"
            android:textStyle="bold|italic"
        android:layout_weight="0.01"
            android:gravity="center" />

        <TextView
            android:id="@+id/abstractdetails_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:text="TextView"
            android:gravity="center"/>

        <TextView
            android:id="@+id/bylinedetails_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:text="Byline"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:gravity="start"/>



        <TextView
            android:id="@+id/readmore_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:text="ReadMore:"
            android:autoLink="all"
            />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>